---
const githubUser = import.meta.env.GITHUB_USER || 'unknown user';
const repoName = import.meta.env.GITHUB_REPO || 'unknown repo';
const commitId = import.meta.env.COMMIT_ID || 'unknown commit';
const repoUrl = `https://github.com/${githubUser}/${repoName}/commit/$COMMIT_ID`;

const siteName = 'Sebastian Danielsson';
const year = new Date().getFullYear();
---

<footer class="flex flex-row justify-center text-xs text-neutral-300">
  <span>&copy; {siteName} {year}</span>
  <span class="mx-2">|</span>
  <span><a href=`${repoUrl}/` target="_blank">{commitId}</a></span>
</footer>
