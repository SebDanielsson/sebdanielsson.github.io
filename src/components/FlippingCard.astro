---
const { item } = Astro.props;
---

<div class="aspect-2/1 group w-full [perspective:1000px]">
  <div
    class="relative h-full w-full rounded-xl bg-black shadow-xl transition-all duration-500 [transform-style:preserve-3d] group-hover:[transform:rotateY(180deg)]"
  >
    <div class="absolute inset-0">
      <img
        class="h-full w-full rounded-xl object-contain shadow-xl shadow-black/40"
        src={item.image}
        alt={item.name}
      />
    </div>
    <div
      class="absolute inset-0 h-full w-full rounded-xl bg-black/80 px-8 py-4 text-center text-slate-200 [backface-visibility:hidden] [transform:rotateY(180deg)]"
    >
      <div class="flex min-h-full flex-col place-content-between items-center">
        <h1 class="my-0 text-xl font-bold text-white">{item.name}</h1>
        <p class="text-sm" set:html={item.description} />
        <a
          href={item.link}
          target="_blank"
          class="rounded-lg bg-[hsla(0,0%,100%,.1)] px-3 py-2 text-xs text-white hover:bg-[hsla(0,0%,100%,.25)] hover:text-white"
        >
          Read More
        </a>
      </div>
    </div>
  </div>
</div>
